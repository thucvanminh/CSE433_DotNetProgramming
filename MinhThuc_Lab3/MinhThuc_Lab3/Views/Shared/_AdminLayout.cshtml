<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Library Management System</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <header class="bg-dark text-white p-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <img src="~/images/logo.png" alt="Library Logo" style="height: 50px;" />
                <h3>Admin Dashboard</h3>
            </div>
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        @if (TempData["AdminMenuItems"] != null)
                        {
                            foreach (var item in (string[])TempData["AdminMenuItems"])
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@(item == "Dashboard" ? "/Admin/Index" : item == "Users" ? "/Admin/Users" : item == "Books" ? "/Admin/Books" : "#")">@item</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Content -->
    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-4">
        <p>© 2025 Library Management System. All rights reserved.</p>
        <p>Eastern International University - Student: [Your Name] - Class: [Your Class]</p>
        <img src="~/images/logo.png" alt="Logo" style="height: 30px;" />
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>