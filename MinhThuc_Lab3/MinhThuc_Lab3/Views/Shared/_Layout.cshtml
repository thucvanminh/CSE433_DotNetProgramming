<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Library Management System</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Area 1: Header -->
    <header class="bg-primary text-white p-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <img src="~/images/logo.png" alt="Library Logo" style="height: 50px;" />
                <form class="d-flex" asp-controller="Home" asp-action="Index" method="get">
                    <input class="form-control me-2" type="search" name="search" placeholder="Tìm kiếm sách..." />
                    <button class="btn btn-light" type="submit">Tìm kiếm</button>
                </form>
                <div>
                    <a class="btn btn-outline-light" href="/Account/Login">Đăng nhập</a>
                    <a class="btn btn-outline-light" href="/Account/Register">Đăng ký</a>
                </div>
            </div>
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        @if (TempData["MenuItems"] != null)
                        {
                            foreach (var item in (string[])TempData["MenuItems"])
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="@(item == "Admin" ? "/Admin/Index" : "#")">@item</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <!-- Area 2: Carousel -->
    <div id="bookCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/book1.jpg" class="d-block w-100" alt="Book 1" style="height: 300px; object-fit: cover;" />
            </div>
            <div class="carousel-item">
                <img src="~/images/book2.jpg" class="d-block w-100" alt="Book 2" style="height: 300px; object-fit: cover;" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>

    <!-- Area 3: Main Content -->
    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-4">
        <p>© 2025 Library Management System. All rights reserved.</p>
        <p>Eastern International University - Student: [Your Name] - Class: [Your Class]</p>
        <img src="~/images/logo.png" alt="Logo" style="height: 30px;" />
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>