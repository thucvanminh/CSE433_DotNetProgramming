@section Styles {
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/signup-index.css" asp-append-version="true" />
}

<div class="register-container">
    <h2>Đăng ký</h2>
    <p>Welcome to us! Please enter your details.</p>

    <form>
        <div class="input-group">
            <label for="name"><span class="required">*</span> Họ và tên</label>
            <input type="text" id="name" placeholder="Họ và tên">
        </div>

        <div class="input-group">
            <label for="email"><span class="required">*</span> E-mail</label>
            <input type="email" id="email" placeholder="E-mail">
        </div>

        <div class="input-group">
            <label for="password"><span class="required">*</span> Mật khẩu</label>
            <div class="password-wrapper">
                <input type="password" id="password" placeholder="Mật khẩu">
                <span class="toggle-icon">👁️</span>
            </div>
        </div>

        <div class="input-group">
            <label for="confirm-password"><span class="required">*</span> Xác nhận mật khẩu</label>
            <div class="password-wrapper">
                <input type="password" id="confirm-password" placeholder="Xác nhận mật khẩu">
                <span class="toggle-icon">👁️</span>
            </div>
        </div>

        <div class="checkbox-group">
            <input type="checkbox" id="terms">
            <label for="terms">Tôi đã đọc <a href="#">quy định</a></label>
        </div>

        <button type="submit" class="register-btn" asp-controller="Login" asp-action="Index">Đăng ký</button>

        <p class="login-text">Bạn đã là thành viên? <a asp-controller="Login" asp-action="Index">Đăng nhập ngay!</a></p>
    </form>
</div>